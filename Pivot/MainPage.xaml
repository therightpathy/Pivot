<Page
    x:Class="Pivot.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pivot"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <local:ViewModel></local:ViewModel>
    </Page.DataContext>
    <Grid>
        <Pivot x:Name="rootPivot" Title="PivotDimseLab">
            <PivotItem Header="Projekterne">
                <!--Pivot content goes here-->
                <ListView ItemsSource="{Binding ListA}" SelectedItem="{Binding SelectedProject, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Height="100">
                                <TextBlock Text = "{Binding Name, Mode=TwoWay}" Margin="10"></TextBlock>
                                <TextBlock Text = "{Binding Description, Mode=TwoWay}" Margin="10"></TextBlock>
                                <ListView ItemsSource="{Binding ParticipantList, Mode=TwoWay}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding Name, Mode=TwoWay}"/>
                                                <TextBlock Text="{Binding Email, Mode=TwoWay}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>

                                </ListView>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
            <PivotItem Header="Deltagere">
                <ListView ItemsSource="{Binding ListA}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text = "{Binding Name}" Margin="10"></TextBlock>
                                <TextBlock Text = "{Binding Email}" Margin="10"></TextBlock>
                            </StackPanel>

                        </DataTemplate>

                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
            <PivotItem Header="Dimser">
                <ListView ItemsSource="{Binding ListC}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text = "{Binding Name}" Margin="10"></TextBlock>
                                <TextBlock Text = "{Binding Returned}" Margin="10"></TextBlock>
                                <TextBlock Text = "{Binding Delivered}" Margin="10"></TextBlock>
                                <TextBlock Text = "{Binding Keyword}" Margin="10"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
